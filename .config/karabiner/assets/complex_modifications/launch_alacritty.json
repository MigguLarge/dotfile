{
  "title": "Launch iTerm",
  "rules": [
    {
      "description": "Launch iTerm by 'hyper + return'",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "shift", "control", "option", "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a iTerm"
            }
          ]
        }
      ]
    }
  ]
}
